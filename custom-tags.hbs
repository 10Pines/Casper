{{!< default}}

<header class="site-header outer" style="background-image: url({{asset "forest2.jpg"}})">
    <div class="inner">
        {{> "site-nav"}}
    </div>
    <div class="site-header-content section-header-content">
        <h1 class="site-title">Tags</h1>
    </div>
</header>

{{#post}}
    <main id="site-main" class="site-main outer" role="main">
        <div class="inner">
            <div class="tag-cloud-container">
                {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
                    {{#foreach tags}}
                        <div class="pill-button">
                            <a href='{{ url }}' style="color: #ffffff">
                                <h2>{{ name }} <small>({{ count.posts }})</small></h2>
                            </a>
                        </div>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </main>
{{/post}}
